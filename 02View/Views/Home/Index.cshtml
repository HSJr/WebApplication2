@model IEnumerable<_02View.Models.NightMarket>

@{
    ViewBag.Title = "各大夜市列表";
}

<h2>各大夜市列表</h2>

<p>
    @*Html Helper*@
    @*@Html.ActionLink("新增資料", "Create")*@
    @*<a href="/Home/Create">新增資料</a>*@
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Id)*@
            編號
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Name)*@
            夜市名稱
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Address)*@
            夜市地址
        </th>
        <th>
            照片
        </th>

        <th>
            地圖
        </th>
        <th>
            資料管理
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @*@Html.DisplayFor(modelItem => item.Id)*@
        @item.Id
    </td>
    <td>
        @*@Html.DisplayFor(modelItem => item.Name)*@
        @item.Name
    </td>
    <td>
        @*@Html.DisplayFor(modelItem => item.Address)*@
        @item.Address
    </td>
    <td>
        <img src="~/images/@(item.Id).jpg" width="150" />
    </td>
    <td>
        <a href="https://www.google.com/maps/search/@(item.Address)" target="_blank" class="btn btn-danger">看地圖</a>
    </td>
    <td>
        @*@Html.ActionLink("編輯", "Edit", new { id = item.Id }) |*@
        @Html.ActionLink("詳細資料", "Details", new { id = item.Id }) |
        @*@Html.ActionLink("刪除", "Delete", new { id = item.Id })*@
    </td>
</tr>
}

</table>
